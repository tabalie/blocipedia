<div class="row">
  <div class="col-md-8">
    <%= render partial: 'wikis/wiki', locals: { wiki: @wiki } %>
  </div>
  <div class="col-md-4">
    <% if policy(@wiki).edit? %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% end %>
    <%= link_to "Delete Wiki", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
</div>
